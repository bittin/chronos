{
  "id": "com.github.cosmic_utils.Chronos",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "chronos",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--talk-name=com.system76.CosmicSettingsDaemon",
    "--filesystem=xdg-config/cosmic:ro"
  ],
  "modules": [
    {
      "name": "chronos",
      "buildsystem": "simple",
      "build-options": {
        "env": {
          "CARGO_HOME": "/run/build/chronos/cargo"
        }
      },
      "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml --verbose",
        "cargo --offline build --release --verbose",
        "install -Dm0755 target/release/chronos /app/bin/chronos",
        "install -Dm0644 res/com.github.cosmic-utils.Chronos.desktop /app/share/applications/com.github.cosmic_utils.Chronos.desktop",
        "install -Dm0644 res/icons/hicolor/scalable/apps/com.github.cosmic-utils.Chronos.svg /app/share/icons/hicolor/scalable/apps/com.github.cosmic_utils.Chronos.svg"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "./"
        },
        "cargo-sources.json"
      ]
    }
  ]
}
